import { {% for interface in importInterfaces(operations) -%}{{ interface }},{%- endfor %} } from '@/http/nodegen/interfaces';
import {JwtAccess} from '@/http/nodegen/interfaces/JwtAccess';
import NodegenRequest from '@/http/nodegen/interfaces/NodegenRequest';

{% if mockServer %}
import {{ ucFirst(operation_name) }}DomainMock from './__mocks__/{{ ucFirst(operation_name) }}DomainMock'
{% endif %}

class {{ ucFirst(operation_name) }}Domain {
  {% for op in operations -%}
    {% for key, path in op.path -%}
      {% if isValidMethod(key) %}
  /**
   * Operation ID: {{ path.operationId }}
   * {% if path.summary %}Summary: {{ path.summary }}{% endif %}
   * {% if path.description %}Description: {{ path.description }}{% endif %}
   */
  public async {{ path.operationId }} ({{ pathParamsToDomainParams(path, true) }}): Promise<{{ path['x-response-definitions']['200'] if path['x-response-definitions']['200'] else 'any' }}> {
    {% if mockServer %}
    return {{ ucFirst(operation_name) }}DomainMock.{{ path.operationId }}({{ pathParamsToDomainParams(path) }});
    {% else %}
    return {};
    {% endif %}
  }
      {% endif %}
    {%- endfor %}
  {%- endfor %}
}

export default new {{ ucFirst(operation_name) }}Domain();
